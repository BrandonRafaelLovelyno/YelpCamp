<% layout('/layouts/boilerplate') %>
  <div class="row">
    <div class="col-6 px-3">
      <div class="card mb-5">
        <img class="card-img-top" src="<%= campground.image %>">
        <div class="card-body">
          <h5 class="card-title">
            <%= campground.title %>
          </h5>
          <p class="card-text">
            <%= campground.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">
            <%= campground.location %>
          </li>
          <li class="list-group-item">$<%= campground.price %>/night</li>
        </ul>
        <div class="card-body">
          <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn bg-info text-light">Edit</a>
          <form action="/campgrounds/<%= campground._id %>?_method=DELETE" class="d-inline" method="POST">
            <button class="bg-danger btn text-light">Delete campground</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-6 px-3">
      
      <h2>Add your review !</h2>
      <form action="/campgrounds/<%= campground._id %>/reviews" method="POST"
        class="form-group bootstrap-validated mb-3" novalidate>
        <div class="form-group mb-3">
          <label for="text" class="form-label">Leave a comment</label>
          <textarea type="text" class="form-control" id="text" placeholder="Review text" name="review[text]"
            required></textarea>
          <%- include('../partials/inputFeedback') %>
        </div>
        <div class="form-group mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" class="form-range" id="rating" min="1" max="5" name="review[rating]" required>
        </div>
        <button class="btn btn-success mt-3">Submit</button>
      </form>
     
      <% for(const review of campground.reviews){ %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <span class="text-muted">Rating : </span><%= review.rating %>
            </h5>
            <div class="card-text mb-3">
              <%= review.text %>
            </div>
            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">
                Delete
              </button>
            </form>
          </div>
        </div>
      <% } %>
     
    </div>
  </div>