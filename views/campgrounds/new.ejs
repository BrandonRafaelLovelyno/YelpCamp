<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Add a campground</h1>
        <div class="col-6 offset-3 py-2">
            <form action="/campgrounds" method="POST" novalidate class="bootstrap-validated" enctype="multipart/form-data">
                <div class="form-group mb-4">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" aria-describedby="title"
                        placeholder="Campground title" name="campground[title]" required>
                    <%- include('../partials/inputFeedback') %>
                </div>
                <div class="form-group mb-4">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" id="location" aria-describedby="location"
                        placeholder="Campground location" name="campground[location]" required>
                    <%- include('../partials/inputFeedback') %>
                </div>
                <div class="form-group mb-4">
                    <label for="description">Description</label>
                    <textarea type="text" class="form-control" id="description" aria-describedby="description"
                        placeholder="Campground description" name="campground[description]" required></textarea>
                    <%- include('../partials/inputFeedback') %>
                </div>
                <div class="mb-3">
                    <label for="price">Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">$</span>
                        </div>
                        <input type="number" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="campground price" id="price" name="campground[price]" required>
                        <%- include('../partials/inputFeedback') %>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" id="image" aria-describedby="image"
                        placeholder="Campground image" name="image" required  multiple>
                    <%- include('../partials/inputFeedback') %>
                </div>
                <button type="submit" class="btn btn-success">Add campground</button>
            </form>
            <div class="mt-3">
                <a href="/campgrounds">All campgrounds</a>
            </div>
        </div>
    </div>