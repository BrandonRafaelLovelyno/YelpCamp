<% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card p-3 mb-5">
            <img class="card-img-top" src="https://images.unsplash.com/photo-1618526640189-81726d5dd707?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80">
            <div class="card-title mt-">
                <h3>Register</h3>
            </div>
            <div class="card-body">
                <form action="/register" class="bootstrap-validated" method="POST" novalidate>
                    <div class="form-group mb-4">
                        <label for="Username">Username</label>
                        <input type="text" class="form-control" id="Username" aria-describedby="Username"
                            placeholder="Username" name="username" required>
                        <%- include('../partials/inputFeedback') %>
                    </div>
                    <div class="form-group mb-4">
                        <label for="Email">Email</label>
                        <input type="email" class="fo rm-control" id="Email" aria-describedby="Email"
                            placeholder="Email" name="email" required>
                        <%- include('../partials/inputFeedback') %>
                    </div>
                    <div class="form-group mb-4">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" aria-describedby="Password"
                            placeholder="Password" name="password" required>
                        <%- include('../partials/inputFeedback') %>
                    </div>
                    <button class="btn btn-success">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>


